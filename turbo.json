{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"NODE_ENV",
				"NEXT_PUBLIC_SITE_URL",
				"NEXT_PUBLIC_AI_API_URL"
			]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"],
			"cache": false
		},
		"format": {
			"dependsOn": ["^format"]
		}
	}
}
